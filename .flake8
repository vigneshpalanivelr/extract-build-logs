# Flake8 Configuration
# Code style and quality checker

[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov

# Error codes to ignore
# E203: Whitespace before ':' (conflicts with black)
# E501: Line too long (handled by black)
# W503: Line break before binary operator (conflicts with black)
# E402: Module level import not at top of file (sometimes needed)
ignore = E203,E501,W503,E402

# Maximum complexity
max-complexity = 15

# Show source code for errors
show-source = True

# Show explanation for errors
show-pep8 = True

# Count errors
count = True
statistics = True
