# Flake8 Configuration
# Code style and quality checker

[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov

# Error codes to ignore
# W503: Line break before binary operator (conflicts with PEP 8 update - now preferred style)
# E402: Module level import not at top of file (needed in test files for sys.path modification)
ignore = W503,E402

# Maximum complexity
max-complexity = 15

# Show source code for errors
show-source = True

# Show explanation for errors
show-pep8 = True

# Count errors
count = True
statistics = True
